<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar_style_one" />

    <RelativeLayout
        android:id="@+id/layout_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_layout_white_one"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的好友"
            android:textColor="@color/text_black"
            android:textSize="@dimen/size_text_14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="点击查看"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/size_text_14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/size_text_16sp"
        android:layout_marginRight="16dp"
        android:background="@color/grey_divider" />

    <include layout="@layout/layout_recyclerview_two" />

</LinearLayout>