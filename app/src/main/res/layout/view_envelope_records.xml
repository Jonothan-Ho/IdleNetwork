<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <com.ipoxiao.idlenetwork.view.CircleImageView
        android:id="@+id/iv_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_portrait"
        android:layout_toRightOf="@+id/iv_portrait"
        android:text="月（がつ）"
        android:textColor="@color/text_black"
        android:textSize="@dimen/size_text_14sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_portrait"
        android:layout_toRightOf="@+id/iv_portrait"
        android:text="ほっかいどう"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/size_text_12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_portrait"
        android:layout_toLeftOf="@+id/tv_money"
        android:text="抢到该红包"
        android:textColor="@color/text_black"
        android:textSize="@dimen/size_text_14sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_portrait"
        android:text="100元"
        android:textColor="#FFFF0000"
        android:textSize="@dimen/size_text_14sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_portrait"
        android:layout_alignParentRight="true"
        android:text="2012-11-11 11:30"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/size_text_12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_divider" />

</RelativeLayout>